//- ------------------------------------
//- BASE LAYOUT
//- ------------------------------------
extends aaa-master-layout


//- ------------------------------------
//- PAGE CONFIGURATION
//- ------------------------------------
prepend config
	- var link = "layout-sidebar-collapsed-left.html"
	- var page = "layout.sidebar.collapsed.si-collapsed-left"
	- var pageSubTitle = " - Collapsed Left Sidebar"
	- var styles = [ 'syntaxhighlighter']
	- var scripts = [ 'a.syntaxhighlighter' ]


//- ------------------------------------
//- PAGE CONTENT
//- ------------------------------------
block content

	//SECTION
	section.l-main-container

		include components/layout/sidebar/collapsed/sidebar_collapsed_left

		//Main Content
		section.l-container

			include components/layout/header/header_1/header_1__t_1__no_sb

			.l-page-header
				h2.l-page-title <span>Collapsed Left</span> Sidebar
				+breadcrumb(bread_layout_sidebar_collapsed_left)

			.l-spaced-vertical
				.l-box.no-border
					.l-spaced

						.syntax-wrapper
							.syntax-info
								.mv
									p With the powerful <strong>Ason Widget</strong> you are able to setup and configure in matter of second complex sidebar functionality.
									p Below we can see how we setup with just one call a <strong>collapsed left sidebar</strong> which can be toggled between collapsed and normal state on all screen sizes.
									p For more information please check out the <strong>documentation!</strong>

							.table-responsive
								pre(class="brush:xml;")
									|&lt;body&gt;
									|	&nbsp;
									|	<section class="l-main-container">
									|	&nbsp;
									|		<aside id="sb-left-id" class="l-sidebar l-sidebar-collapsed-left">
									|	&nbsp;
									|			<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-on-all="collapsed" data-ason-to-all="sidebar" data-ason-target="#sb-left-id" >
									|				<i class="fa fa-bars"> </i>
									|			</a>
									|	&nbsp;
									|   		</aside>
									|	&nbsp;
									|		<section class="l-container">
									|	&nbsp;
									| 			Page content...
									|	&nbsp;
									|   		</section>
									|	&nbsp;
									|		Page content...
									|   	</section>
									|	&nbsp;
									|&lt;/body&gt;

			include components/layout/footer/footer_1/footer_1__t_1
