//HEADER
header.l-header.l-header-2.t-header-1.z-index-9

	// Stats In Header
	.pull-left
		.widget-stats-2.stats-2-in-header
			.stats-2-toggler
				i.fa.fa-users
			.stats-2-content
				.l-row.stats-2-header
					.l-span-xs-8.stats-2-title
