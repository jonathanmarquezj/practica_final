//- breadcrumb - v1
//- ==========================================================================
mixin breadcrumb(items)
	if items
		//BREADCRUMB
		ul.breadcrumb.t-breadcrumb-page
			li
				a(href = 'index.html') Home

			- each item in items

				//- Item Type 1
				if item.type == 'link'
					li
						a(href = item.url) #{item.name}
				//- Item Type 2
				if item.type == 'text'
					li #{item.name}

				//- Item Type 3
				if item.type == 'active'
					li.active #{item.name}

//- ==========================================================================
//- Box
//- ==========================================================================
mixin box-options()
	ul.l-box-options
		li
			a(href = '#')
				i.fa.fa-cogs

		li
			a.ason-widget(href='#', data-ason-type="fullscreen", data-ason-target=".l-box", data-ason-content="true")

		li
			a.ason-widget(href='#', data-ason-type="refresh", data-ason-target=".l-box", data-ason-duration="1000")
				i.fa.fa-rotate-right
		li
			a.ason-widget(href = '#', data-ason-type="toggle", data-ason-find=".l-box", data-ason-target=".l-box-body", data-ason-content="true", data-ason-duration="200")

		li
			a.ason-widget(href='#', data-ason-type="delete", data-ason-target=".l-box", data-ason-content="true", data-ason-animation="fadeOut")



