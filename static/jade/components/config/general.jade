//- Merge arrays
//- ==========================================================================
- function mergeArrays(arr_1, arr_2)
	-each item in arr_2
		- arr_1.push(item)

	- return arr_1


//- Eliminate duplicates
//- ==========================================================================
- function eliminateDuplicate(arr)
	- var i, len=arr.length, result=[], obj={};

	- for (i=0; i<len; i++)
		- obj[arr[i]]=0

	- for (i in obj)
		- result.push(i)

	- return result


//- Check if is active nav item
//- ==========================================================================
- function navActiveLi(active_page, active_item)
	- var res=false, active_page_array;
	- if (active_page)
		- active_page_array = active_page.split(".");
		- each item in active_page_array
			- if(active_item == item)
				- res = true
	- return res