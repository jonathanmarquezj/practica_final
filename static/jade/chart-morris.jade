//- ------------------------------------
//- BASE LAYOUT
//- ------------------------------------
extends aaa-master-layout


//- ------------------------------------
//- PAGE CONFIGURATION
//- ------------------------------------
prepend config
	- var link = "chart-morris.html"
	- var page = "chart.ch-morris"
	- var pageSubTitle = " - Charts - Morris"
	- var scripts = [ 'a.shared.raphael', 'charts.morris', 'x.call.chart.morris' ]


//- ------------------------------------
//- PAGE CONTENT
//- ------------------------------------
block content

	//SECTION
	section.l-main-container


		include components/layout/sidebar/sidebar_1/sidebar_1__t_1__left

		//Main Content
		section.l-container

			include components/layout/header/header_1/header_1__t_1

			.l-page-header
				h2.l-page-title <span>Morris</span> Charts
				+breadcrumb(bread_chart_morris)

			.l-spaced

				.l-box.l-spaced-bottom
					.l-box-header
						h2.l-box-title <span>Area</span> Morris Chart
						+box-options

					.l-box-body.l-spaced
						.hide.morris-area-1
						.hide.morris-area-2
						.hide.morris-area-3
						.morris-chart#morrisArea

				.l-box.l-spaced-bottom
					.l-box-header
						h2.l-box-title <span>Bar</span> Morris Chart
						+box-options

					.l-box-body.l-spaced
						.hide.morris-bar-1
						.hide.morris-bar-2
						.hide.morris-bar-3
						.morris-chart#morrisBar

				.l-box.l-spaced-bottom
					.l-box-header
						h2.l-box-title <span>Stacked Bar</span> Morris Chart
						+box-options

					.l-box-body.l-spaced
						.hide.morris-stacked-1
						.hide.morris-stacked-2
						.hide.morris-stacked-3
						.morris-chart#morrisStacked

				.l-row
					.l-box.l-col-md-6
						.l-box-header
							h2.l-box-title <span>Donut</span> Morris Chart
							+box-options

						.l-box-body.l-spaced
							.hide.morris-donut-1
							.hide.morris-donut-2
							.hide.morris-donut-3
							.hide.morris-donut-4
							.morris-chart#morrisDonut

					.l-box.l-col-md-6
						.l-box-header
							h2.l-box-title <span>Line</span> Morris Chart
							+box-options

						.l-box-body.l-spaced
							.hide.morris-line-1
							.morris-chart#morrisLine

			include components/layout/footer/footer_1/footer_1__t_1

		include components/layout/sidebar/sidebar_2/sidebar_2__t_2__right










