										|	&nbsp;
										|	<section class="l-main-container">
										|	&nbsp;
										|		<aside id="sb-left-id" class="l-sidebar l-sidebar-1">
										|	&nbsp;
										|			<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-to-sm="sidebar" data-ason-target="#sb-left-id" >
										|				<i class="fa fa-bars"> </i>
										|			</a>
										|	&nbsp;
										|   		</aside>
										|	&nbsp;
										|		<section class="l-container">
										|	&nbsp;
										|			<header class="l-header l-header-1">
										|				Header content...
										|	&nbsp;
										|				<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-on-all="collapsed" data-ason-to-all="sidebar" data-ason-is-right="true" data-ason-anim-all="['velocity', 'transition.ason.slideLeftIn', 'transition.ason.slideRightIn']" data-ason-target="#sb-right-2-id" >
										|					<i class="fa fa-bar-chart"> </i>
										|				</a>
										|	&nbsp;
										|       		</header>
										|	&nbsp;
