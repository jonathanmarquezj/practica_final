//- ------------------------------------
//- PAGE CONTENT
//- ------------------------------------
block content

	//SECTION
	section.l-main-container

		include components/layout/sidebar/sidebar_1/sidebar_1__t_1__left

		//Main Content
		section.l-container

			include components/layout/header/header_1/header_1__t_1__no_sb

			.l-page-header
				h2.l-page-title <span>Blank</span> Page
				+breadcrumb(bread_page_blank)

			.l-spaced-vertical
				.l-box.no-border
					.l-spaced
						p This is a <strong> Blank Page</strong>. It's a template for creating pages.
						p You will also find a <strong>Sass template</strong> in the modules (<strong>page_blank.scss</strong>) and widgets(<strong>widget_blank.scss</strong>) directories.
						p For more information check out the <strong> documentation </strong>.


			include components/layout/footer/footer_1/footer_1__t_1


