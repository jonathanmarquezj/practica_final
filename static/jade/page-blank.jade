//- ------------------------------------
//- PAGE CONFIGURATION
//- ------------------------------------
prepend config
	- var link = "page-blank.html"
	- var page = "page.p-blank"
	- var pageSubTitle = " - Page - Blank"
	- var scripts = [ 'page.blank.plugins', 'x.call.page.blank' ]

