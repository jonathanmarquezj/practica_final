//- ------------------------------------
//- BASE LAYOUT
//- ------------------------------------
extends aaa-master-layout


//- ------------------------------------
//- PAGE CONFIGURATION
//- ------------------------------------
prepend config
	- var link = "layout-sidebar-slide-default.html"
	- var page = "layout.sidebar.slide.si-slide-default"
	- var pageSubTitle = " - Default Slidebars"
	- var styles = [ 'syntaxhighlighter']
	- var scripts = [ 'a.syntaxhighlighter', 'tooltips.tooltipster', 'x.call.shared.tooltipster']

//- ------------------------------------
//- PAGE CONTENT
//- ------------------------------------
block content

	//SECTION
	section.l-main-container

		include components/layout/sidebar/sidebar_1/slidebar_1__t_1__left

		//Main Content
		section.l-container

			include components/layout/header/header_1/header_1__t_1__no_sb

			.l-page-header
				h2.l-page-title <span>Default</span> Slidebars
				+breadcrumb(bread_layout_sidebar_slide_default)

			.l-spaced-vertical
				.l-box.no-border
					.l-spaced
						.l-row
							.l-col-xs-6
								.l-spaced-bottom.tar

									button.btn.btn-primary.ason-widget.tt-left(data-ason-type="sidebar", title="Toggle Left Slidebar",
										data-ason-on-all="slidebar-left",
										data-ason-anim-all=['velocity', 'transition.slideLeftBigIn', 'transition.slideLeftBigOut'],
										data-ason-target="#slide-left")
											i.fa.fa-align-right

							.l-col-xs-6
								.l-spaced-bottom
									button.btn.btn-primary.ason-widget.tt-right(data-ason-type="sidebar", title="Toggle Right Slidebar",
										data-ason-on-all="slidebar-right",
										data-ason-anim-all=['velocity', 'transition.expandIn', 'transition.shrinkOut'],
										data-ason-target="#slide-right")
											i.fa.fa-align-left

						.syntax-wrapper
							.syntax-info
								.mv
									p In this example we see <strong>2 slidebars</strong>, one on the <strong>left</strong> the other one on the <strong>right</strong>.
									p Both of them having their own <strong><a href="http://velocityjs.org" target="_blank">Velocity.js</a></strong> animation on all screen sizes.
									p The <strong>left slidebar</strong> comes with the browser deafult scrollbar. For the <strong>right slidebar</strong> we set up a custom scrollbar with the help of the <strong>Ason Widget</strong>.
									p For more information please check out the <strong>documentation!</strong>

							.table-responsive
								pre(class="brush:xml;")
									|&lt;body&gt;
									|	&nbsp;
									|	<section class="l-main-container">
									|	&nbsp;
									|		<aside id="slide-left-id" class="l-slidebar l-slidebar-left-1">
									|	&nbsp;
									| 			Left slidebar content...
									|	&nbsp;
									|   		</aside>
									|	&nbsp;
									|		<section class="l-container">
									|	&nbsp;
									|			<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-on-all="slidebar-left" data-ason-anim-all="['velocity', 'transition.slideLeftBigIn', 'transition.slideLeftBigOut']" data-ason-target="#slide-left-id" >
									|				<i class="fa fa-align-right"> </i>
									|			</a>
									|	&nbsp;
									|			<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-on-all="slidebar-right" data-ason-anim-all="['velocity', 'transition.expandIn', 'transition.shrinkOut']" data-ason-target="#slide-right-id" >
									|				<i class="fa fa-align-left"> </i>
									|			</a>
									|	&nbsp;
									| 			Page content...
									|	&nbsp;
									|   		</section>
									|	&nbsp;
									|		Page content...
									|	&nbsp;
									|		<aside id="slide-right-id" class="l-slidebar l-slidebar-right-1">
									|	&nbsp;
									|   			<div class="ason-widgeet" data-ason-type="scrollbar" data-ason-max-height="100%" >
									|	&nbsp;
									| 				Right slidebar content...
									|	&nbsp;
									|			</div>
									|	&nbsp;
									|   		</aside>
									|	&nbsp;
									|   	</section>
									|	&nbsp;
									|&lt;/body&gt;


			include components/layout/footer/footer_1/footer_1__t_1

		include components/layout/sidebar/sidebar_1/slidebar_1__t_1__right