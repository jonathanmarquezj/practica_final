//- ------------------------------------
//- BASE LAYOUT
//- ------------------------------------
extends aaa-master-layout


//- ------------------------------------
//- PAGE CONFIGURATION
//- ------------------------------------
prepend config
	- var link = "layout-page-boxed.html"
	- var page = "layout.l-page.pa-boxed"
	- var pageSubTitle = " - Boxed page"
	- var styles = [ 'syntaxhighlighter']
	- var scripts = [ 'a.syntaxhighlighter' ]

append config
	- var pageBodyClasses = bodyClasses.push('l-boxed')


//- ------------------------------------
//- PAGE CONTENT
//- ------------------------------------
block content

	//SECTION
	section.l-main-container.t-boxed


		include components/layout/sidebar/sidebar_1/sidebar_1__t_1__left

		//Main Content
		section.l-container

			include components/layout/header/header_1/header_1__t_1__no_sb

			.l-page-header
				h2.l-page-title <span>Boxed</span> Page Layout
				+breadcrumb(bread_layout_page_boxed)

			.min-height-900
				.l-spaced-vertical
					.l-box.no-border
						.l-spaced

							.syntax-wrapper
								.syntax-info
									p.mv <strong>Boxed</strong> page layout.

								.table-responsive
									pre(class="brush:xml;")
										|&lt;body class="l-boxed"&gt;
										|	&nbsp;
										|	<section>
										|		<header>
										|			Header content...
										|       	</header>
										|	&nbsp;
										|		<aside>
										|			Sidebar content...
										|		</aside>
										|	&nbsp;
										|		Page content...
										|   	</section>
										|	&nbsp;
										|&lt;/body&gt;

				include components/layout/footer/footer_1/footer_1__t_1