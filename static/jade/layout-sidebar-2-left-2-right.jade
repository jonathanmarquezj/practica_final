									|	&nbsp;
									|	<section class="l-main-container">
									|	&nbsp;
									|		<aside id="sb-left-id" class="l-sidebar l-sidebar-1">
									|	&nbsp;
									|			<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-to-sm="sidebar" data-ason-target="#sb-left-id" >
									|				<i class="fa fa-bars"> </i>
									|			</a>
									|	&nbsp;
									|   		</aside>
									|	&nbsp;
									|		<aside id="sb-left-2-id" class="l-sidebar l-sidebar-hidden">
									|	&nbsp;
									|			Sidebar content...
									|	&nbsp;
									|   		</aside>
									|	&nbsp;
									|		<section class="l-container">
									|	&nbsp;
									|			<header class="l-header l-header-1">
									|	&nbsp;
									|				<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-on-all="hidden" data-ason-to-all="compact" data-ason-target="#sb-left-2-id" >
									|					<i class="fa fa-bar-share"> </i>
									|				</a>
									|	&nbsp;
									|				Header content...
									|	&nbsp;
									|				<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-sidebar="l-sidebar-3" data-ason-on-xl="collapsed" data-ason-on-lg="collapsed" data-ason-on-md="hidden" data-ason-to-md="compact" data-ason-on-sm="hidden" data-ason-to-sm="compact" data-ason-is-right="true" data-ason-target="#sb-right-2-id" >
									|					<i class="fa fa-share-alt"> </i>
									|				</a>
									|	&nbsp;
									|				<a href="#" class="ason-widget" data-ason-type="sidebar" data-ason-sidebar="l-sidebar-3" data-ason-on-lg="compact" data-ason-is-right="true" data-ason-target="#sb-right-id" >
									|					<i class="fa fa-bar-users"> </i>
									|				</a>
									|	&nbsp;
									|       		</header>
									|	&nbsp;
