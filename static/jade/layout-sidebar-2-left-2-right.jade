									|	&nbsp;
									|   		</section>
									|	&nbsp;
									|		<aside id="sb-right-2-id" class="l-sidebar l-sidebar-3">
									|	&nbsp;
									|			Sidebar content...
									|	&nbsp;
									|   		</aside>
									|	&nbsp;
									|		<aside id="sb-right-id" class="l-sidebar l-sidebar-3">
									|	&nbsp;
									|			Sidebar content...
									|	&nbsp;
									|   		</aside>
									|   	</section>
									|	&nbsp;
									|&lt;/body&gt;


			include components/layout/footer/footer_1/footer_1__t_1

		include components/layout/sidebar/sidebar_3/sidebar_3__t_4__right

		include components/layout/sidebar/sidebar_3/sidebar_3__t_2__right_3

